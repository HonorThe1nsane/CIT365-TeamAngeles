@model SaramentMeetingPlanner.Models.Planner

@{
    ViewData["Title"] = "Details";

    List<string> speakerList = Model.Speakers.Split(new char[] { ',' }).ToList();
    List<string> speakerSubjectsList = Model.SpeakerSubjects.Split(new char[] { ',' }).ToList();
}
 

<h1>Details</h1>

<div>
    <h4>Planner</h4>
    <hr />
    <div class="bg-light pt-5 pb-5 justify-content-center text-center">
        <p>@Html.DisplayFor(model => model.Date)</p>
        <ul class="list-unstyled">
            <li>
                <br />@Html.DisplayNameFor(model => model.ConductingLeader)...........................................................................................................................@Html.DisplayFor(model => model.ConductingLeader)
            </li>
            <li>
                <br />@Html.DisplayNameFor(model => model.OpeningSongTitle)...........................................................................................................................@Html.DisplayFor(model => model.OpeningSongNum)
            </li>
            <li>
                <em>"@Html.DisplayFor(model => model.OpeningSongTitle)"</em>
            </li>
            <li>
                <br />@Html.DisplayNameFor(model => model.OpeningPrayer)...........................................................................................................................@Html.DisplayFor(model => model.OpeningPrayer)
            </li>
            <li>
                <br />@Html.DisplayNameFor(model => model.SacramentHymnTitle)..........................................................................................................................@Html.DisplayFor(model => model.SacramentHymn)
            </li>
            <li>
                <em>"@Html.DisplayFor(model => model.SacramentHymnTitle)"</em>
            </li>
             <li>
                <br />First Speaker..........................................................................................................................@speakerList[0]
            </li>
            @if (Model.NumberOfSpeakers == 3)
            {
                <li>
                    <br />Second Speaker..........................................................................................................................@speakerList[1]
                </li>
                <li>
                    <br />@Html.DisplayNameFor(model => model.IntermediateTitle)..........................................................................................................................@Html.DisplayFor(model => model.IntermediateNum)
                </li>
                <li>
                    <em>"@Html.DisplayFor(model => model.IntermediateTitle)"</em>
                </li>
                <li>
                    <br />Final Speaker..........................................................................................................................@speakerList[2]
                </li>
            }
            else if(Model.NumberOfSpeakers == 2)
            {
                <li>
                    <br />First Speaker..........................................................................................................................@speakerList[0]
                </li>
                <li>
                    <br />@Html.DisplayNameFor(model => model.IntermediateTitle)..........................................................................................................................@Html.DisplayFor(model => model.IntermediateNum)
                </li>
                <li>
                    <em>"@Html.DisplayFor(model => model.IntermediateTitle)"</em>
                </li>
                <li>
                    <br />Final Speaker..........................................................................................................................@speakerList[1]
                </li>
            }
            <li>
                <br />@Html.DisplayNameFor(model => model.ClosingHymnTitle)..........................................................................................................................@Html.DisplayFor(model => model.ClosingHymnNum)
            </li>
            <li>
                <em>"@Html.DisplayFor(model => model.ClosingHymnTitle)"</em>
            </li>
            <li>
                <br />@Html.DisplayNameFor(model => model.ClosingPrayer)..........................................................................................................................@Html.DisplayFor(model => model.ClosingPrayer)
            </li>
            <li>
                <br />@Html.DisplayNameFor(model => model.NumberOfSpeakers)..........................................................................................................................@Html.DisplayFor(model => model.NumberOfSpeakers)
            </li>
            <li>
                <br />@Html.DisplayNameFor(model => model.SpeakerSubjects)..........................................................................................................................@Html.DisplayFor(model => model.SpeakerSubjects)
            </li>
        </ul>
    </div>
</div>


<div>
    <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a class="btn btn-outline-dark" asp-action="Index">Back to List</a>
</div>
